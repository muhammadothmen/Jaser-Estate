<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterFragment"
    android:layoutDirection="rtl"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_fragment_filter"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/CustomToolBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ScrollView
        android:id="@+id/svMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btn_apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_fragment_filter"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/main_content_padding">


            <LinearLayout
                android:id="@+id/ll1_filter_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/detail_screen_location_marginStartEnd"
                android:layout_marginTop="@dimen/detail_screen_location_marginTop"
                android:layout_marginEnd="@dimen/detail_screen_location_marginStartEnd"
                >
                <TextView
                    android:id="@+id/tv_filter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_screen_description_text_color"
                    android:textSize="@dimen/detail_screen_location_text_size"
                    android:textStyle="bold"
                    android:text="@string/edit_text_hint_type"
                    />
                <Switch
                    android:id="@+id/sw_filter_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2_filter_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/detail_screen_description_margin"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll1_filter_type"
                android:visibility="gone"
                tools:visibility="visible"
                >

                <CheckBox
                android:id="@+id/cb_filter_sale"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/rb_text_sale"
                android:textSize="@dimen/detail_screen_location_text_size"
                android:textStyle="bold"
                android:layout_gravity="center"

                />
                <CheckBox
                    android:id="@+id/cb_filter_buy"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_text_buy"
                    android:textSize="@dimen/detail_screen_location_text_size"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <CheckBox
                    android:id="@+id/cb_filter_rent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_text_rent"
                    android:textSize="@dimen/detail_screen_location_text_size"
                    android:textStyle="bold"
                    />

                <CheckBox
                    android:id="@+id/cb_filter_bet"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/rb_text_bet"
                    android:textSize="@dimen/detail_screen_location_text_size"
                    android:textStyle="bold"
                    android:layout_gravity="center"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1_filter_roomNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll2_filter_type"
                android:layout_marginStart="@dimen/detail_screen_location_marginStartEnd"
                android:layout_marginTop="@dimen/detail_screen_location_marginTop"
                android:layout_marginEnd="@dimen/detail_screen_location_marginStartEnd"
                >
                <TextView
                    android:id="@+id/tv_filter_roomNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_screen_description_text_color"
                    android:textSize="@dimen/detail_screen_location_text_size"
                    android:textStyle="bold"
                    android:text="@string/edit_text_hint_roomNo"
