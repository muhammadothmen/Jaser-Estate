                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll1_filter_roomNo"
                android:visibility="gone"
                tools:visibility="visible"
                >
                <TextView
                    android:id="@+id/tv_filter_roomNo_low_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_screen_description_text_color"
                    android:textSize="@dimen/detail_screen_location_text_size"
                    android:textStyle="bold"
                    android:text="2"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="6dp"
                    />
                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/rs_filter_roomNO"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    app:labelBehavior="withinBounds"
                    android:valueFrom="1"
                    android:valueTo="10"
                    android:stepSize="1.0"
                    app:values="@array/roomNo_slider_values"
                    android:theme="@style/Slider"
                    />
                <TextView
                    android:id="@+id/tv_filter_roomNo_high_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/detail_screen_description_text_color"
                    android:textSize="@dimen/detail_screen_location_text_size"
                    android:textStyle="bold"
                    android:text="3"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="6dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll1_filter_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll2_filter_roomNo"
